                      font-family: 'Railway-SemiBold';
                      font-style: normal;
                      font-weight: 600;
                      src: local('RailwaySemiBold'), local('Railway-SemiBold'),
                    /*
                           url('/fso_website_email_roki/static/src/fonts/rubik-v9-latin-regular.eot?#iefix') format('embedded-opentype'), !* IE6-IE8 *!
